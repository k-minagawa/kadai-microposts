<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <%= link_to("Top", root_path, class:"navbar-brand mb-0 h1") %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler01" aria-controls="navbarToggler01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarToggler01">
      <div class="navbar-nav">
        <% if logged_in? %>
          <%= link_to("Users", users_path, class:"nav-item nav-link") %>
          <%= link_to("Likes", likes_user_path(current_user), class:"nav-item nav-link") %>
          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.name %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to("My Page", user_path(current_user), class: "dropdown-item") %>
              <div class="dropdown-divider"></div>
              <%= link_to("Logout", logout_path, class: "dropdown-item", method: :delete) %>
            </div>
          </div>
        <% else %>
          <%= link_to("Signup", signup_path, class:"nav-item nav-link") %>
          <%= link_to("Login", login_path, class:"nav-item nav-link") %>
        <% end %>
      </div>
    </div>
  </nav>
</header>