<% if current_user.liking?(micropost) %>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-light btn-sm") do %>
      <%= content_tag :span, micropost.liking_users.count, class: "badge badge-secondary" %> Unlike
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag( class: "btn btn-primary btn-sm") do %>
      <%= content_tag :span, micropost.liking_users.count, class: "badge badge-secondary badge-light" %> Like
    <% end %>
  <% end %>
<% end %>